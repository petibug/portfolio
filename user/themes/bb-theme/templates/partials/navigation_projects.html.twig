<ul>
        {% for p in page.collection %}
            {% set current_page = (p.active or p.activeChild) ? 'selected' : '' %}
            <li class="{{ current_page }}">
                <a href="{{ p.url }}">
                    {% if p.header.icon %}<i class="fa fa-{{ p.header.icon }}"></i>{% endif %}
                    {{ p.title }}
                </a>
            </li>
        {% endfor %}

</ul>

